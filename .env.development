# Development Environment Variables

# Database Configuration
POSTGRES_DB=sih_db
POSTGRES_USER=sih_user  
POSTGRES_PASSWORD=sih_password
DATABASE_URL=postgresql://sih_user:sih_password@postgres:5432/sih_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true
ENVIRONMENT=development

# Asset Mapping Backend Configuration  
ASSET_BACKEND_HOST=0.0.0.0
ASSET_BACKEND_PORT=8000

# Frontend Configuration
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_ASSET_BACKEND_URL=http://localhost:8001
VITE_BACKEND_URL=http://localhost:8000
VITE_ASSET_BACKEND_URL=http://localhost:8001

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (replace with your actual keys)
GOOGLE_API_KEY=your-google-api-key
GEMINI_API_KEY=your-gemini-api-key

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/uploads

# Development specific
CHOKIDAR_USEPOLLING=true
FAST_REFRESH=true